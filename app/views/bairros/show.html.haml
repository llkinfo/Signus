.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "Listar")}", bairros_path
      %li= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_bairro_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Mostrar")}", bairro_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.bairro.nome", :default => t("activerecord.labels.nome", :default => "Nome"))
          \:
        = @bairro.nome
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Editar")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_bairro_path(@bairro), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Excluir")}") + " " + t("web-app-theme.delete", :default => "Delete"), bairro_path(@bairro), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
