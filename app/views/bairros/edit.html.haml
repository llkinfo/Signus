.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "Listar")}", bairros_path
      %li= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_bairro_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Editar")}", edit_bairro_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Editar")
      Bairro
    .inner
      = form_for @bairro, :url => bairro_path(@bairro), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
